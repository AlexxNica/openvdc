{
  "id": "https://raw.githubusercontent.com/axsh/openvdc/master/schema/v1.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "OpenVDC Resource Template Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "template": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/templates/none"
        },
        {
          "$ref": "#/templates/lxc"
        },
        {
          "$ref": "#/templates/null"
        }
      ]
    },
    "templates": {
      "none": {},
      "lxc": {
        "minimum_vcpu": {
          "type": "integer",
          "default": 1
        },
        "minimum_memory_gb": {
          "type": "integer",
          "default": 1
        },
        "lxc_image": {
          "type": "object",
          "properties": {
            "download_url": {
              "type": "string",
              "format": "uri"
            },
            "checksum_type": {
              "type": "string"
            },
            "checksum": {
              "type": "string"
            }
          },
          "required": [
            "download_url"
          ]
        }
      },
      "null": {
        "minimum_vcpu": {
          "type": "integer",
          "default": 1
        },
        "minimum_memory_gb": {
          "type": "integer",
          "default": 1
        }
      }
    }
  },
  "required": [
    "title",
    "template"
  ]
}
