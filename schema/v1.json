{
  "id": "https://raw.githubusercontent.com/axsh/openvdc/master/schema/v1.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "OpenVDC Resource Template Schema",
  "type": "object",
  "properties": {
    "_comment": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "template": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/templates/none"
        },
        {
          "$ref": "#/templates/lxc"
        },
        {
          "$ref": "#/templates/null"
        }
      ]
    }
  },
  "required": [
    "title",
    "template"
  ],
  "templates": {
    "none": {
      "required": [
        "type"
      ],
      "properties": {
        "_comment": {
          "type": "string"
        },
        "type": {
          "enum": [
            "none"
          ]
        }
      }
    },
    "lxc": {
      "required": [
        "type"
      ],
      "properties": {
        "_comment": {
          "type": "string"
        },
        "type": {
          "enum": [
            "vm/lxc"
          ]
        },
        "min_vcpu": {
          "type": "integer",
          "default": 1
        },
        "min_memory_gb": {
          "type": "integer",
          "default": 1
        },
        "vcpu": {
          "type": "integer",
          "default": 1
        },
        "memory_gb": {
          "type": "integer",
          "default": 1
        },
        "lxc_image": {
          "type": "object",
          "properties": {
            "_comment": {
              "type": "string"
            },
            "download_url": {
              "type": "string",
              "format": "uri"
            },
            "checksum_type": {
              "type": "string"
            },
            "checksum": {
              "type": "string"
            }
          },
          "required": [
            "download_url"
          ]
        }
      }
    },
    "null": {
      "required": [
        "type"
      ],
      "properties": {
        "_comment": {
          "type": "string"
        },
        "type": {
          "enum": [
            "vm/null"
          ]
        },
        "min_vcpu": {
          "type": "integer",
          "default": 1
        },
        "min_memory_gb": {
          "type": "integer",
          "default": 1
        }
      }
    }
  }
}
