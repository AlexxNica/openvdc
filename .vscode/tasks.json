{
  "version": "0.1.0",
  "command": "${workspaceRoot}/build.sh",
  "windows": {
    "command": "powershell",
    "args":["-ExecutionPolicy", "Bypass", "${workspaceRoot}\\build.ps1"]
  },
  "isShellCommand": true,
  "echoCommand": true,
  "showOutput": "silent",
  "tasks": [
    {
      "taskName": "Build",
      "suppressTaskName": true,
      "problemMatcher": "$go",
      "isBuildCommand": true
    }
  ]
}
