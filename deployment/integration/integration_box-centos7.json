{
  "variables": {
    "memory": "2048",
    "host_switch": "{{env `HOST_SWITCH`}}",
    "nic2_ipv4": "192.168.56.61"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "boxtemp/7.2/box.ovf",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "shutdown_timeout": "10s",
      "headless": true,
      "vm_name": "openvdc-integration",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "virtio"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype2",
          "virtio",
          "--nic2",
          "hostonly",
          "--hostonlyadapter2",
          "{{user `host_switch`}}"
        ]
      ],
      "vboxmanage_post": [
        [
          "modifyvm",
          "{{.Name}}",
          "--description",
          "CentOS7.2, openvdc-integration"
        ]
      ],
      "export_opts": [
        "--vsys",
        "0",
        "--description",
        "CentOS7.2, openvdc-integration",
        "--vendor",
        "Axsh",
        "--version",
        "0.1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "fastestmirror.conf",
      "destination": "/tmp/fastestmirror.conf"
    },
    {
      "type": "file",
      "source": "../../deployment/docker/yum.repo/dev.repo", 
      "destination": "/tmp/dev.repo"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [
        "cp /tmp/fastestmirror.conf /etc/yum/pluginconf.d/fastestmirror.conf",
        "mv /tmp/dev.repo  /etc/yum.repos.d/dev.repo",
        "yum install -y epel-release lxc",
        "yum install -y http://repos.mesosphere.io/el/7/noarch/RPMS/mesosphere-el-repo-7-1.noarch.rpm",
        "yum install -y mesosphere-zookeeper mesos",
        "yum install -y openvdc",
        "systemctl enable zookeeper",
        "systemctl enable mesos-master",
        "systemctl enable mesos-slave",
        "#firewall-cmd --permanent --zone=public --add-port=5050/tcp",
        "#firewall-cmd --permanent --zone=public --add-port=5051/tcp",
        "nmcli connection add type ethernet ifname eth1 save yes con-name eth1 ip4 {{user `nic2_ipv4`}}/24",
        "echo '{{user `nic2_ipv4`}} openvdc-integration' >> /etc/hosts",
        "echo 'openvdc-integration' > /etc/hostname"
      ]
    }
  ]
}
